<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codeanapp.project.mapper.PresensiMapper">

    <insert id="insertPresensi" parameterType="com.codeanapp.project.model.Presensi">
        INSERT INTO presensi (idpresensi, pelajarid)
        VALUES (#{idpresensi}, #{pelajarid})
    </insert>

    <select id="getAllPresensi" resultType="com.codeanapp.project.model.Presensi">
        SELECT idpresensi, pelajarid
        FROM presensi
    </select>

    <delete id="deletePresensi" parameterType="com.codeanapp.project.model.Presensi">
        DELETE FROM presensi
        WHERE idpresensi = #{idpresensi}
    </delete>
</mapper>